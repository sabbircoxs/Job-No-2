<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg2"
    android:padding="30dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="261dp"
        android:layout_marginTop="4dp"
        android:outlineAmbientShadowColor="@color/white"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fbBtn"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#3650DF"
        android:drawableLeft="@drawable/fb"
        android:text="Continue with Facebook"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/callBtn"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#673AB7"
        android:drawableLeft="@drawable/call"
        android:text="Continue with phone"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/fbBtn"
        app:layout_constraintStart_toStartOf="@+id/fbBtn"
        app:layout_constraintTop_toBottomOf="@+id/fbBtn" />


    <Button
        android:id="@+id/button"
        android:layout_width="335dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#E91E63"
        android:text="Continue"
        app:layout_constraintEnd_toEndOf="@+id/callBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/callBtn"
        app:layout_constraintTop_toBottomOf="@+id/callBtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="Don't have an account?"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.104" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Sign up"
        android:textColor="#0D713D"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.104" />


</androidx.constraintlayout.widget.ConstraintLayout>